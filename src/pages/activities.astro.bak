---
import Layout from '../layouts/Layout.astro';
import Welcome from '../components/home-page/welcome.tsx'
import Clock from '../components/clock/clock.tsx'
---

<Layout title={`Actividades - C-Med Days Badalona 2026`}>
	<Welcome transition:name="hero"/>
	
	<!-- Content Sections -->
	<div class="px-30">
		

		<!-- Horario Section -->
		<section class="w-full py-16 bg-black">
			<div class="max-w-4xl mx-auto px-6">
				<h2 class="text-4xl font-extrabold text-center mb-16 text-green-400">
					Programa Completo
				</h2>

				<!-- Día 1 -->
				<div class="mb-12">
					<div class="bg-black border border-green-400 rounded-lg p-6 mb-4">
						<div class="flex items-center gap-6">
							<div class="text-green-400">
								<div class="text-3xl font-bold">MAR</div>
								<div class="text-2xl font-bold">15</div>
							</div>
							<div class="flex-1">
								<h3 class="text-2xl font-bold text-green-400 mb-1">VIERNES DE INAUGURACIÓN</h3>
								<p class="text-green-400 text-sm">DÍA COMPLETO - CONFERENCIAS PRINCIPALES</p>
							</div>
						</div>
					</div>

					<!-- Actividades del día 1 -->
					<div class="space-y-4">
						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">09:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">INAUGURACIÓN OFICIAL</h4>
									<p class="text-green-400 text-sm">AUDITORIO PRINCIPAL - ENTRADA LIBRE</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">10:30</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">CONFERENCIA: CANNABIS MEDICINAL</h4>
									<p class="text-green-400 text-sm">SALA A - CUPOS LIMITADOS</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">12:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">NETWORKING COFFEE BREAK</h4>
									<p class="text-green-400 text-sm">HALL PRINCIPAL - SERVICIO INCLUIDO</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">14:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">TALLER: CULTIVO RESPONSABLE</h4>
									<p class="text-green-400 text-sm">SALA B - MATERIAL INCLUIDO</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">16:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">PANEL: REGULACIÓN Y LEGALIDAD</h4>
									<p class="text-green-400 text-sm">AUDITORIO PRINCIPAL - ENTRADA LIBRE</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">18:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">COCKTAIL DE BIENVENIDA</h4>
									<p class="text-green-400 text-sm">TERRAZA EXTERIOR - NETWORKING INFORMAL</p>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Día 2 -->
				<div class="mb-12">
					<div class="bg-black border border-green-400 rounded-lg p-6 mb-4">
						<div class="flex items-center gap-6">
							<div class="text-green-400">
								<div class="text-3xl font-bold">MAR</div>
								<div class="text-2xl font-bold">16</div>
							</div>
							<div class="flex-1">
								<h3 class="text-2xl font-bold text-green-400 mb-1">SÁBADO DE TALLERES</h3>
								<p class="text-green-400 text-sm">DÍA COMPLETO - EXPERIENCIAS PRÁCTICAS</p>
							</div>
						</div>
					</div>

					<!-- Actividades del día 2 -->
					<div class="space-y-4">
						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">09:30</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">TALLER: ANÁLISIS DE CANNABINOIDES</h4>
									<p class="text-green-400 text-sm">LABORATORIO - MATERIAL INCLUIDO</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">11:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">ESPACIO CIUDADANO</h4>
									<p class="text-green-400 text-sm">SALA C - ENTRADA LIBRE</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">13:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">ALMUERZO DE NETWORKING</h4>
									<p class="text-green-400 text-sm">RESTAURANTE - MESAS TEMÁTICAS</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">15:30</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">DEMOSTRACIÓN: PRODUCTOS</h4>
									<p class="text-green-400 text-sm">STAND PRINCIPAL - ENTRADA LIBRE</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">17:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">CONFERENCIA: FUTURO DEL SECTOR</h4>
									<p class="text-green-400 text-sm">AUDITORIO PRINCIPAL - ENTRADA LIBRE</p>
								</div>
							</div>
						</div>

						<div class="bg-black border border-green-400 rounded-lg p-6">
							<div class="flex items-center gap-6">
								<div class="text-green-400">
									<div class="text-2xl font-bold">19:00</div>
								</div>
								<div class="flex-1">
									<h4 class="text-xl font-bold text-green-400 mb-1">CIERRE Y ENTREGA DE CERTIFICADOS</h4>
									<p class="text-green-400 text-sm">AUDITORIO PRINCIPAL - CEREMONIA OFICIAL</p>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Información adicional -->
				<div class="bg-gradient-to-r from-green-400/20 to-green-600/20 rounded-lg p-8 text-center">
					<h3 class="text-2xl font-bold text-white mb-4">Información Importante</h3>
					<div class="grid md:grid-cols-3 gap-6 text-sm text-gray-300">
						<div>
							<h4 class="text-green-400 font-bold mb-2">Registro</h4>
							<p>Llegada recomendada 30 min antes del inicio</p>
						</div>
						<div>
							<h4 class="text-green-400 font-bold mb-2">Material</h4>
							<p>Se proporcionará material didáctico en cada actividad</p>
						</div>
						<div>
							<h4 class="text-green-400 font-bold mb-2">Certificación</h4>
							<p>Certificado de participación disponible al finalizar</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>
